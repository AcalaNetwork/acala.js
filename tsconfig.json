{
    "extends": "./node_modules/@polkadot/dev/config/tsconfig",
    "exclude": [
      "build/**/*",
      "**/build/**/*"
    ],
    "compilerOptions": {
      "baseUrl": ".",
      "paths":
      {
        "@acala-network/api": ["packages/api/src"],
        "@acala-network/api/*": ["packages/api/src/*"],
        "@acala-network/types": ["packages/types/src"],
        "@acala-network/types/*": ["packages/types/src/*"],
        "@acala-network/api-derive": ["packages/api-derive/src"],
        "@acala-network/api-derive/*": ["packages/api-derive/src/*"],
        "@acala-network/type-definitions": ["packages/type-definitions/src"],
        "@acala-network/type-definitions/*": ["packages/type-definitions/src/*"],
        "@acala-network/sdk-core": ["packages/sdk-core/src/*"],
        "@acala-network/sdk-core/*": ["packages/sdk-core/src/*"],
      },
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@polkadot/ts",
        "./node_modules/@types"
      ]
    }
  }
