{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom", "dom.iterable"],
		"isolatedModules": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"target": "esnext",
		"skipLibCheck": true,
		"strict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"composite": true,
		"paths": {
      "@acala-network/sdk": [ "packages/sdk/src/index.ts"],
      "@acala-network/sdk/*": ["packages/sdk/src/*"],
      "@acala-network/sdk-core": ["packages/sdk-core/src/index.ts"],
      "@acala-network/sdk-core/*": ["packages/sdk-core/src/*"],
      "@acala-network/sdk-loan": ["packages/sdk-loan/src/index.ts"],
      "@acala-network/sdk-loan/*": ["packages/sdk-loan/src/*"],
      "@acala-network/sdk-swap": ["packages/sdk-swap/src/index.ts"],
      "@acala-network/sdk-swap/*": ["packages/sdk-swap/src/*"],
      "@acala-network/sdk-payment": ["packages/sdk-payment/src/index.ts"],
      "@acala-network/sdk-payment/*": ["packages/sdk-payment/src/*"],
      "@acala-network/wormhole-portal": ["packages/wormhole-portal/src/index.ts"],
      "@acala-network/wormhole-portal/*": ["packages/wormhole-portal/src/*"],
		}
	}
}