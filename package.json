{
  "version": "4.1.8-10",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@polkadot/api": "^9.9.1",
    "@polkadot/typegen": "^9.9.1",
    "@polkadot/types-codec": "^9.9.1",
    "@polkadot/api-derive": "^9.9.1",
    "@polkadot/rpc-augment": "^9.9.4",
    "typescript": "^4.6.4",
    "rxjs": "^7.5.7",
    "@types/bn.js": "^5.1.0"
  },
  "scripts": {
    "build": "yarn build:interfaces && polkadot-dev-build-ts",
    "build:release": "polkadot-ci-ghact-build",
    "build:interfaces": "node -r ts-node/register -r tsconfig-paths/register packages/types/scripts/generateTypes.ts && node -r ts-node/register -r tsconfig-paths/register packages/type-definitions/scripts/generate.ts",
    "lint": "polkadot-dev-run-lint",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "polkadot-dev-run-test --coverage --forceExit --detectOpenHandles",
    "check-deps": "./node_modules/@open-web3/util/scripts/check-deps.js yarn.lock @polkadot/ @open-web3/",
    "update-metadata": "ts-node --project ./tsconfig.json packages/types/scripts/updateMetadata.ts",
    "generate:defs": "ts-node -r tsconfig-paths/register node_modules/.bin/polkadot-types-from-defs --package @acala-network/types/interfaces --input packages/types/src/interfaces --endpoint packages/types/src/metadata/static-latest.json",
    "generate:meta": "ts-node -r tsconfig-paths/register node_modules/.bin/polkadot-types-from-chain --package @acala-network/types/interfaces --output packages/types/src/interfaces --endpoint packages/types/src/metadata/static-latest.json",
    "update-types": "yarn update-metadata && yarn generate:defs && yarn generate:meta"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/register": "^7.13.6",
    "@babel/runtime": "^7.14.0",
    "@open-web3/dev-config": "^0.2.3",
    "@open-web3/util": "^1.1.4",
    "@types/jest": "^25.2.3",
    "jest-config": "^29.3.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  },
  "packageManager": "yarn@3.2.0",
  "stableVersion": "4.1.8-9"
}
