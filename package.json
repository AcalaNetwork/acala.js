{
  "version": "0.2.0-beta.31",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build": "yarn check-deps && yarn build:interfaces && polkadot-dev-build-ts",
    "build:interfaces": "node -r ts-node/register packages/types/scripts/generate.ts",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx . && tsc --noEmit --pretty",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "jest --testPathIgnorePatterns e2e",
    "check-deps": "./node_modules/@orml/util/scripts/check-deps.js yarn.lock @polkadot/ @orml/"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/register": "^7.8.0",
    "@babel/runtime": "^7.8.0",
    "@orml/util": "^0.2.0-beta.65",
    "@polkadot/dev": "^0.32.17",
    "@polkadot/ts": "^0.2.1",
    "ts-node": "^8.6.1"
  }
}
